@page
@using HomeServices_RazorPage.Areas.Admin.Pages.Services
@model CreateModel
@{
    ViewData["Title"] = "هوم سرویس > مدیریت سرویس > ایجاد دسته بندی جدید";

}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    دسته بندی ها
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" id="simple-form" role="form" method="post">
                    <div class="form-body">
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="@Model.Work.Tiltle" class="form-control" type="text" placeholder="عنوان" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="@Model.Work.Description" class="form-control" type="text" placeholder="توضیحات" />
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="@Model.Work.BasePrice" class="form-control" type="text" placeholder="قیمت پایه" />
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="input-group">
                                <select asp-for="@Model.Work.SubCategoryId" class="form-select">
                                    @*cityid*@
                                    @foreach (var city in Model.ChildCategories)
                                    {
                                        <option value="@city.Id">@city.Title</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="form-group relative">
                            <input asp-for="@Model.Work.ServiceImage" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>

                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->