@page
@model HomeServices_RazorPage.Areas.Admin.Pages.Services.IndexModel
@{
    ViewData["Title"] = "هوم سرویس > مدیریت سرویس ها > لیست سرویس ها";

}
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    خدمات
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a class="btn btn-success" href="/Admin/Services/create">
                    <i class="icon-plus"></i>
                    افزودن
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </a>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th>عکس</th>
                                <th>نام</th>
                                <th>توضیحات</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var service in Model.HouseWorks)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>@service.Id</td>

                                    @*                                     @if (string.IsNullOrEmpty(service.ImagePath))
                                    {
                                        <td><img style="border-radius : 50%" src="~/AdminTemplate/images/user/placeholder.jpg" width="80" height="80" /></td>
                                    }
                                    else
                                    {
                                    }
 *@                                        
                                    <td><img style="border-radius : 50%" src="@service.ImagePath" width="80" height="80" /></td>
                                    <td>@service.Tiltle</td>
                                    <td>@service.Description</td>

                                    <td>
                                        <a asp-page="UpdateService" asp-route-Id="@service.Id" class="btn btn-info">ویرایش</a>

                                        <a onclick="return confirm('آیا از حذف این دسته بندی اطمینان دارید؟')"
                                           asp-page-handler="Delete"
                                           asp-route-id="@service.Id"
                                           class="btn btn-danger">
                                            حذف
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}