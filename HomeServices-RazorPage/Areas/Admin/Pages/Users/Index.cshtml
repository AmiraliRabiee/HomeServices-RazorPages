@page
@using HomeServices_RazorPage.Areas.Admin.Pages.Users
@model IndexModel
@{
    ViewData["Title"] = "دیوارچه > مدیریت کاربران > لیست کاربران";
}
<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    کاربران
                </h3>
            </div>
        </div>
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a class="btn btn-success" href="/Admin/Users/Create">
                    <i class="icon-plus"></i>
                    افزودن
                </a>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th>پروفایل</th>
                                <th>نام</th>
                                <th>نام خانوادگی</th>
                                <th>نام کاربری</th>
                                <th>ایمیل</th>
                                <th>عملیات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model.Users)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>@user.Id</td>

                                    <td>
                                        <img style="border-radius: 50%" src="@(string.IsNullOrEmpty(user.ImagePath) ? "~/AdminTemplate/images/user/placeholder.jpg" : user.ImagePath)" width="80" height="80" />
                                    </td>

                                    <td>@user.FirstName</td>
                                    <td>@user.LastName</td>
                                    <td>@user.UserName</td>
                                    <td>@(!string.IsNullOrWhiteSpace(user.Email) ? user.Email : "-----")</td>

                                    <td>
                                        <a asp-page="Update" asp-route-Id="@user.Id" class="btn btn-info">ویرایش</a>

                                        <a asp-page-handler="Delete"
                                        asp-route-Id="@user.Id" 
                                        class="btn btn-danger">حذف</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}
