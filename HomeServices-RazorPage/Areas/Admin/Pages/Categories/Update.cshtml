@page
@using App.Domain.Core.Contracts.AppService
@model HomeServices_RazorPage.Areas.Admin.Pages.Categories.UpdateModel
@{
}
@inject IBaseDataAppService BaseDataAppService;

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    دسته بندی ها
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
            </div>
            <div class="row">
                <form enctype="multipart/form-data" id="simple-form" role="form" method="post" asp-page-handler="Update">
                    <img style="border-radius : 50%" src="@Model.Category.ImagePath" width="80" height="80" />
                    <hr />
                    <input type="hidden" asp-for="@Model.Category.Id" />

                    <div class="form-body">
                        <label>عنوان</label>
                        <div class="form-group">
                            <div class="input-group">
                                <input asp-for="@Model.Category.Title" class="form-control" type="text" placeholder="@Model.ExistCategory.Title">
                            </div>
                        </div>

                        <div class="form-group">
                            <label>شناسه والد</label>
                            <div class="input-group">
                                <input class="form-control" type="text"
                                       value="@(Model.Category.ParentId.HasValue ? Model.Category.ParentId.ToString() : "-")" readonly>
                            </div>
                        </div>

                        <div class="form-group relative">
                            <input asp-for="@Model.Category.CategoryImage" type="file" class="form-control">
                            <label>آپلود عکس</label>
                            <div class="input-group round">
                                <input type="text" class="form-control file-input" placeholder="برای آپلود کلیک کنید">
                                <span class="input-group-btn">
                                    <button type="button" class="btn btn-success">
                                        <i class="icon-picture"></i>
                                        آپلود عکس
                                        <div class="paper-ripple">
                                            <div class="paper-ripple__background"></div>
                                            <div class="paper-ripple__waves"></div>
                                        </div>
                                    </button>
                                </span>
                            </div><!-- /.input-group -->
                            <div class="help-block"></div>
                        </div>

                    </div>
                    <hr>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->