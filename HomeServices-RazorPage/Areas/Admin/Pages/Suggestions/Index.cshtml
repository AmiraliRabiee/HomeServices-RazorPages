@page
@using App.Domain.Core.Helpers
@model HomeServices_RazorPage.Areas.Admin.Pages.Suggestions.IndexModel
@{
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    سفارشات
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <div class="top-buttons-box mb-2">
                <a class="btn btn-success" href="#">
                    <i class="icon-plus"></i>
                    افزودن
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </a>
            </div>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bsuggestioned table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>توضیحات</th>
                                <th>شهر</th>
                                <th>تاریخ اجرا</th>
                                <th>زمان اجرا</th>
                                <th>نام کارشناس</th>
                                <th>وضعیت سفارش</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var suggestion in Model.Suggestions)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>@suggestion.Description</td>
                                    <td>@suggestion.City</td>
                                    <td>@suggestion.DeliverDate</td>
                                    <td>@suggestion.RunungTimeOrder</td>
                                    <td>@suggestion.ExpertName</td>
                                    <td>@suggestion.StausService.GetDisplayName()</td>
                                    <td>
@*                                         <a asp-page="Updatesuggestion" asp-route-Id="@suggestion.Id" class="btn btn-info">ویرایش</a>
                                        
                                        <a asp-page="Details" asp-route-Id="@suggestion.Id" class="btn btn-primary">جزئیات</a> *@

@*                                         <a asp-page="Updatesuggestion" asp-route-Id="@order.Id" class="btn btn-info">ویرایش</a>

                                        <a onclick="return confirm('آیا از حذف این دسته بندی اطمینان دارید؟')"
                                           asp-page-handler="Delete"
                                           asp-route-id="@order.Id"
                                           class="btn btn-danger">
                                            حذف
                                        </a> *@
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}