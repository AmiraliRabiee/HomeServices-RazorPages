@page
@model HomeServices_RazorPage.Areas.Admin.Pages.Comments.IndexModel
@{
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    سفارشات
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
@*             <div class="top-buttons-box mb-2">
                <a class="btn btn-success" asp-page="Create">
                    <i class="icon-plus"></i>
                    افزودن
                    <div class="paper-ripple"><div class="paper-ripple__background"></div><div class="paper-ripple__waves"></div></div>
                </a>
            </div *@>
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered table-hover table-striped" id="data-table">
                        <thead>
                            <tr>
                                <th class="p-low"><input type="checkbox" id="btn-check-all-toggle"></th>
                                <th>#</th>
                                <th class="col-2">کاربر</th>
                                <th class="col-4">نظر</th>
                                <th class="col-2">تاریخ ثبت</th>
                                <th class="col-1">امتیاز</th>
                                <th class="col-2">عملیات</th> <!-- Reduced width for action column -->
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var comment in Model.CommntsList)
                            {
                                <tr>
                                    <td><input type="checkbox"></td>
                                    <td>@comment.Id</td>
                                    <td>@comment.ExpertName</td>
                                    <td style="word-wrap: break-word;">@comment.Opinion</td>
                                    <td>@comment.RegissterDate</td>
                                    <td>@comment.Points</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a asp-page-handler="Accept" asp-route-Id="@comment.Id" class="btn btn-success btn-sm flex-grow-1">تایید<i class="fas fa-check-circle ms-1"></i> </a>
                                            <a asp-page-handler="Delete" asp-route-Id="@comment.Id" class="btn btn-danger btn-sm flex-grow-1">رد <i class="fas fa-trash ms-1"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->
@section Scripts
{
    <script src="~/AdminTemplate/plugins/data-table/js/jquery.dataTables.min.js"></script>
    <script src="~/AdminTemplate/js/pages/datatable.js"></script>
}